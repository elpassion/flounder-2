{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", ".prisma/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": ["./tsconfig.?*.json"]
      },
      "rules": {
        "@typescript-eslint/ban-types": "off"
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
