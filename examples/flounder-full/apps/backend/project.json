{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/backend",
        "main": "apps/backend/src/main.ts",
        "tsConfig": "apps/backend/tsconfig.app.json",
        "webpackConfig": "apps/backend/custom-webpack.config.js",
        "assets": [
          {
            "glob": "**/*.json",
            "input": "apps/backend/src/i18n",
            "output": "i18n"
          },
          {
            "glob": "**/*.hbs",
            "input": "apps/backend/src/templates",
            "output": "templates"
          }
        ],
        "generatePackageJson": true
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "backend:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "backend:build:production"
        },
        "development": {
          "buildTarget": "backend:build:development"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.all-config.ts",
        "passWithNoTests": true,
        "coverageDirectory": "coverage/apps/backend",
        "coverageReporters": ["lcov"]
      }
    },
    "test:e2e": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.e2e-config.ts",
        "passWithNoTests": true,
        "coverageDirectory": "coverage/apps/backend",
        "coverageReporters": ["lcov"]
      }
    },
    "test:unit": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/backend"],
      "options": {
        "jestConfig": "apps/backend/jest.config.ts",
        "passWithNoTests": true,
        "coverageDirectory": "coverage/apps/backend"
      }
    },
    "tsc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc -p ./apps/backend/tsconfig.app.json"
      }
    },
    "docker:build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.aws/build_app.sh backend {args.tag}"
      }
    },
    "docker:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "./.aws/deploy_app.sh backend {args.stage} {args.tag}"
      }
    },
    "typeorm:migrations": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=development ts-node -P ./apps/backend/tsconfig.app.json ./apps/backend/src/console.ts migrations"
      }
    },
    "typeorm:migrations:test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=test ts-node -P ./apps/backend/tsconfig.app.json ./apps/backend/src/console.ts migrations"
      }
    }
  },
  "tags": [],
  "name": "backend"
}
